{
  "apps": [
    {
      "name": "api-node-js",
      "script": "npm run prod",
      "watch": true,
      "watch_delay": 1000,
      "ignore_watch": ["node_modules", "tmp", "src/errors"],
      "instances": 1,
      "max_memory_restart": "1024",
      "restart_delay": 3000,
      "env": {
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ]
}
